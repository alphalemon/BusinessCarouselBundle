<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    
    
    <route id="_list_carousel_items" pattern="/backend/{_locale}/al_listItems">
        <default key="_controller">BusinessCarouselBundle:BusinessCarousel:list</default>
        <default key="_locale">en</default>
    </route>
    
    <route id="_show_carousel_form" pattern="/backend/{_locale}/al_showItemForm">
        <default key="_controller">BusinessCarouselBundle:BusinessCarousel:showItem</default>
        <default key="_locale">en</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="_save_carousel_item" pattern="/backend/{_locale}/al_saveItem">
        <default key="_controller">BusinessCarouselBundle:BusinessCarousel:save</default>
        <default key="_locale">en</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="_delete_carousel_item" pattern="/backend/{_locale}/al_deleteItem">
        <default key="_controller">BusinessCarouselBundle:BusinessCarousel:delete</default>
        <default key="_locale">en</default>
        <requirement key="_method">POST</requirement>
    </route>
</routes>
